<resources>

    <style name="Theme.TransparencyDemo" parent="@android:style/Theme.Holo.Light">

    </style>

    <!-- Styles -->
    <style name="MyOverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/menu_icon</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <!-- Pointer to Overflow style DONT forget! -->
        <item name="android:actionOverflowButtonStyle">@style/MyOverFlow</item>
    </style>

    <style name="fullScreenTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:icon">@drawable/drawer_icon</item>
    </style>

    <style name="set_as_wallpaper_theme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/action_bar_color</item> 
        <item name="colorControlHighlight">@color/accent_translucent</item> 
        <item name="colorAccent">@color/accent</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/action_bar_color</item> 
        <item name="colorPrimaryDark">@color/action_bar_color</item> 
        <item name="colorControlHighlight">@color/accent_translucent</item> 
        <item name="colorAccent">@color/accent</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
    </style>

    <style name="FabStyleSearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:src">@drawable/search</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="backgroundTint">@color/action_bar_color</item>
    </style>

    <style name="FabStyleSetAsWallpaper">
        <item name="android:src">@drawable/set_as_wallpaper</item>
        <item name="borderWidth">2dp</item>
        <item name="elevation">12dp</item>
        <item name="pressedTranslationZ">24dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="Snackbar" />

    <style name="Snackbar.Text">
        <item name="android:paddingBottom">@dimen/sb__text_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/sb__text_padding_left</item>
        <item name="android:paddingTop">@dimen/sb__text_padding_top</item>
        <item name="android:paddingRight">@dimen/sb__text_padding_right</item>
        <item name="android:textSize">@dimen/sb__text_size</item>
        <item name="android:textColor">@color/sb__text_color</item>
    </style>

    <style name="Snackbar.Text.Action">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/sb__action_text_color</item>
        <item name="android:background">@drawable/sb__btn_bg</item>
    </style>

    <color name="primary">#00BCD4</color>
    <color name="primary_dark">#0097A7</color>
    <color name="accent">#FFEB3B</color>
    <color name="accent_translucent">#80FFEB3B</color>
    <color name="accent_bright">#FFF493</color>
    <color name="action_bar_color">#00ACC1</color>
    <color name="action_bar_color_dark">#666</color>

    <style name="scroll_bar">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/ic_launcher</item>
    </style>

</resources>

